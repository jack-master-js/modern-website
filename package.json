{
  "name": "website1",
  "version": "0.1.0",
  "scripts": {
    "reset": "rm -rf node_modules",
    "dev": "modern dev",
    "build": "modern build",
    "start": "modern start",
    "new": "modern new",
    "lint": "modern lint",
    "apidoc": "apidoc -i api/ -o config/public/apidoc"
  },
  "engines": {
    "node": ">=14.17.6"
  },
  "eslintConfig": {
    "extends": [
      "@modern-js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "@modern-js/plugin-bff": "^1.0.0",
    "@modern-js/plugin-express": "^1.0.0",
    "@modern-js/plugin-less": "1.0.0",
    "@modern-js/plugin-server-build": "^1.0.0",
    "@modern-js/runtime": "^1.0.0",
    "express": "^4.17.1",
    "log4js": "^6.3.0",
    "mongodb": "^4.1.3",
    "mongoose": "^6.0.12",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sequelize": "^6.8.0"
  },
  "devDependencies": {
    "@modern-js/app-tools": "^1.0.0",
    "@modern-js/plugin-jarvis": "^1.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6"
  },
  "modernConfig": {
    "runtime": {
      "router": true,
      "state": true
    },
    "server": {
      "ssr": true
    }
  },
  "apidoc": {
    "name": "modern-website",
    "description": "API document",
    "version": "0.1.0",
    "title": "Node Api Document",
    "sampleUrl": "http://localhost:3000"
  }
}
